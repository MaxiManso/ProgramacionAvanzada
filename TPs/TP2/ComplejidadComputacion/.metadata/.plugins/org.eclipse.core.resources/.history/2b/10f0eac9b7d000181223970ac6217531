package edu.unlam.prograAvanzada.TP3;


import static org.junit.Assert.assertEquals;

import org.junit.Assert;
import org.junit.Test;

public class PolinomioTest {

	@Test
	public void calculoPotenciaMultipicacionesSucesivasNumerosEnterosPositivo() {
		Polinomio pol = new Polinomio(1, new double[1]);
		assertEquals(32,0, pol.PotenciaMSucesivas(2, 5));
	}
	
	@Test
	public void calcularPotenciaMultiplicacionesSucesivasNumerosEnterosNegativos() {
		Polinomio pol = new Polinomio(1, new double[1]);
		assertEquals(32,0 , pol.PotenciaMSucesivas(-2, 5));
	}
	
	public void calcularPotenciaMultipicacionesSucesivasNumerosReales() {
		Polinomio pol = new Polinomio(1, new double[1]);
		assertEquals(40,84101, pol.PotenciaMSucesivas(2,1 , 5));
	}
	

}
